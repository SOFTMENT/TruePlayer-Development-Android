<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="in.softment.dogbreedersstore.EntryPageActivity">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:riv_corner_radius="16dp"
        android:src="@drawable/logo"
        />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/intersemibold"
            android:text="MY BREEDERS STORE"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/intermedium"
            android:text="A secure platform where you can buy and sell pedigree dogs from registered breeders."
            android:textAlignment="center"
            android:textColor="@color/light_gray"
            android:textSize="12sp" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue as"
        android:layout_above="@+id/bottomLL"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/intersemibold"

        />

    <LinearLayout
        android:id="@+id/bottomLL"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="2"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back"
            android:backgroundTint="#98C66A"
            android:text="User"
            android:layout_marginEnd="6dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/intermedium"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/breeder"
            android:layout_marginStart="6dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back"
            android:backgroundTint="#98C66A"
            android:text="Breeder"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/intermedium"
            android:layout_weight="1"
            />
    </LinearLayout>

</RelativeLayout>
