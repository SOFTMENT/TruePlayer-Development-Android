<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/relative_layout"
    tools:context=".PlayVideoActivity">

<com.google.android.exoplayer2.ui.StyledPlayerView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/exoplayer"
    app:resize_mode="fit"
    app:use_controller="true"
    android:background="@color/black"
    />
    <androidx.cardview.widget.CardView
        android:id="@+id/back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#fff"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/leftarrow" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/fullScreen"
        android:layout_width="36dp"
        android:layout_height="36dp"
       android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#fff"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <ImageView

            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_fullscreen_24" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/exoplayer"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        >
        <TextView
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Title 1"
            android:fontFamily="@font/montbold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/dark_color"
            android:id="@+id/videotitle"
            />
        <LinearLayout
            android:id="@+id/timelevelLL"
            android:background="@drawable/edittext_back"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_below="@+id/videotitle"
            android:layout_marginTop="24dp"
            android:weightSum="2"
            >
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".99"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_access_time_black"
                    />

                <LinearLayout
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:fontFamily="@font/montmedium"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Min"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montmedium"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01"
                android:background="@color/neon_green"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".99"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_star_border_24"
                    />

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:fontFamily="@font/montmedium"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montmedium"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timelevelLL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            >
            <TextView
                android:textAlignment="center"
                android:width="70dp"
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous"
                android:fontFamily="@font/montregular"
                android:textSize="13sp"
                android:textColor="@color/dark_color"

                />
            <LinearLayout
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:background="@drawable/playpauseback"
                android:gravity="center"
                android:id="@+id/playPauseBtn"
                >
                <ImageView
                    android:id="@+id/playPauseImage"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/pause_white"
                    />

            </LinearLayout>
            <TextView
                android:width="70dp"
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:fontFamily="@font/montregular"
                android:textSize="13sp"
                android:textColor="@color/dark_color"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
