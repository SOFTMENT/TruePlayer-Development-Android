<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"

        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_corner_radius="16dp"
            android:src="@drawable/placeholder"
            android:scaleType="fitXY"
            android:id="@+id/highlightimage"
            />
        <com.makeramen.roundedimageview.RoundedImageView
            android:scaleType="fitXY"
            android:src="@drawable/highlightshadow"
            app:riv_corner_radius_bottom_right="16dp"
            app:riv_corner_radius_bottom_left="16dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:src="@drawable/play"
            />
        <LinearLayout
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/highlightby"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montregular"
                android:lines="1"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By 'User Name'"

                />
        </LinearLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
