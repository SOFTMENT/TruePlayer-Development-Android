<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#fff"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/leftarrow" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/account_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/montbold"
        android:text="Create An Account"
        android:textColor="#000000"
        android:textSize="18sp" />
    <FrameLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/account_log_in"
        android:id="@+id/frame"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp">

        <ImageView

            android:id="@+id/user_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/profile_placeholder" />

        <ImageView


            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_back"

            android:src="@drawable/circleimageview" />

    </FrameLayout>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frame"
        android:id="@+id/taptochange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montmedium"
        android:text="Tap to Change"
        android:textColor="@color/link"
        android:textSize="12sp" />
    <EditText

        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/taptochange"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_back"
        android:fontFamily="@font/montmedium"
        android:hint="Enter Full Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/emailaddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/fullName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_back"
        android:fontFamily="@font/montmedium"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/emailaddress"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_back"

        android:fontFamily="@font/montsemibold"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="12sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Enter Club / Team Name (Optional)"
        android:fontFamily="@font/montsemibold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:id="@+id/enterClubTV"
        />
    <EditText

        android:id="@+id/clubName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/enterClubTV"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_back"
        android:fontFamily="@font/montmedium"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="12sp" />



    <androidx.appcompat.widget.AppCompatButton
        android:textSize="13sp"
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/clubName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_back"
        android:backgroundTint="@color/neon_green"
        android:fontFamily="@font/montsemibold"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montregular"
            android:text="Already have an account?"
            android:textColor="@color/light_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_marginStart="4dp"
            android:textColor="@color/link"
            android:textSize="12sp"
            android:fontFamily="@font/montbold"
            />
    </LinearLayout>
</RelativeLayout>
