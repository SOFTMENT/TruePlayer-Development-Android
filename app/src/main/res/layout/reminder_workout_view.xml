<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edittext_back"
    android:layout_marginBottom="10dp"
    android:layout_height="90dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:riv_corner_radius_top_left="4dp"
        app:riv_corner_radius_bottom_left="4dp"
        android:src="@drawable/placeholder"
        android:id="@+id/workoutImage"
        />
    <LinearLayout
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/workoutImage"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout 1"
            android:fontFamily="@font/montbold"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/category"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ball Mastery"
            android:fontFamily="@font/montregular"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            />

        <TextView

            android:padding="4dp"
            android:background="@drawable/edittext_back"
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:20 min"
            android:fontFamily="@font/montregular"
            android:textColor="@color/black"
            android:textSize="10sp"
            />

    </LinearLayout>
    <CheckBox

        android:id="@+id/checkBox"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:buttonTint="@color/neon_green"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        />


</RelativeLayout>
